<Window x:Class="PersonalFinances.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalFinances"
        mc:Ignorable="d"
        Title="Personal Finances"
        Height="600" Width="720"
        ResizeMode="NoResize">
    <Window.Resources>
        <local:WalletViewModel x:Key="walletViewModel"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="223*"/>
            <ColumnDefinition Width="497*"/>
        </Grid.ColumnDefinitions>
        <TabControl Grid.ColumnSpan="2">
            <TabItem DataContext="{StaticResource walletViewModel}" FontSize="24" Margin="-2,-3,0,-1">
                <TabItem.Header>
                    <TextBlock>Кошельки</TextBlock>
                </TabItem.Header>
                <TabItem.Content>
                    <Grid Background="#FFE5E5E5">
                        <ListBox ItemsSource="{Binding Path=Wallets}"
                                 SelectedIndex="{Binding Path=SelectedWalletIndex}"
                                 Width="675" Margin="20,10,19,194"/>
                        <Button Command="{Binding Path=AddCommand}"
                                Content="Добавить"
                                Width="135" Height="45"
                                Margin="560,0,0,60" FontSize="24"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Left"/>
                        <Button Command="{Binding Path=RemoveCommand}"
                                Content="Удалить" Width="135" 
                                Height="45" Margin="560,0,0,10" 
                                FontSize="24" VerticalAlignment="Bottom" 
                                HorizontalAlignment="Left"/>
                        <TextBox Text="{Binding Path=Title,
                            UpdateSourceTrigger=PropertyChanged}"
                                 Width="526" Margin="20,0,0,60" 
                                 TextAlignment="Left" HorizontalAlignment="Left" 
                                 Height="45" VerticalAlignment="Bottom" 
                                 VerticalContentAlignment="Center"/>
                        <TextBox Text="{Binding Path=Balance,
                            UpdateSourceTrigger=PropertyChanged}"
                                 Width="411" Margin="20,0,0,10" 
                                 TextAlignment="Left" HorizontalAlignment="Left" 
                                 Height="45" VerticalAlignment="Bottom" 
                                 VerticalContentAlignment="Center"/>
                        <ComboBox Text="{Binding Path=Currency,
                            UpdateSourceTrigger=PropertyChanged}" Margin="436,0,0,10" 
                                 Height="45" VerticalAlignment="Bottom" 
                                 VerticalContentAlignment="Center" HorizontalAlignment="Left" Width="110">
                            <TextBlock>UAH</TextBlock>
                            <TextBlock>USD</TextBlock>
                            <TextBlock>EUR</TextBlock>
                        </ComboBox>
                    </Grid>
                </TabItem.Content>
            </TabItem>
            <TabItem Width="150"
                     FontSize="24" Margin="0,-3,0,-1">
                <TabItem.Header>
                    <TextBlock Text="Операции"/>
                </TabItem.Header>
                <TabItem.Content>
                    <Grid Background="#FFE5E5E5">
                        <Grid>
                            <GroupBox Header="Пополнение" Margin="0,5,0,0" Height="180" VerticalAlignment="Top" HorizontalAlignment="Center" Width="694"/>
                            <TextBox Width="317" Height="46" Margin="20,72,0,0" 
                                VerticalAlignment="Top" HorizontalAlignment="Left"
                                VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
                            <ComboBox Margin="342,72,19,0" VerticalAlignment="Top" Height="46"/>
                            <TextBlock Height="32" VerticalAlignment="Top" 
                                HorizontalAlignment="Left" Width="79" 
                                Margin="21,40,0,0"><Run Text="С"/><Run Language="ru-ru" Text="умма"/><Run Text=":"/></TextBlock>
                            <TextBlock Height="32" VerticalAlignment="Top" 
                                HorizontalAlignment="Left" Width="105" 
                                Margin="342,35,0,0"><Run Language="ru-ru" Text="Кошелёк"/><Run Text=":"/></TextBlock>
                            <Button Height="45" Content="Подтвердить" VerticalAlignment="Top"
                                Margin="20,123,0,0" VerticalContentAlignment="Center" HorizontalAlignment="Left" Width="180"/>
                        </Grid>

                        <Grid>

                            <GroupBox Header="Снятие" Height="180" VerticalAlignment="Top" HorizontalAlignment="Center" Width="694" Margin="0,188,0,0"/>
                            <TextBox Width="194" Height="45" Margin="20,256,0,0" 
                                  VerticalAlignment="Top" HorizontalAlignment="Left"
                                  VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
                            <Button Height="45" Content="Подтвердить" VerticalAlignment="Top"
                                Margin="21,306,0,0" VerticalContentAlignment="Center" HorizontalAlignment="Left" Width="180"/>
                            <ComboBox Margin="219,256,0,0" VerticalAlignment="Top" Height="45" HorizontalAlignment="Left" Width="246"/>
                            <TextBlock Height="33" VerticalAlignment="Top" 
                                HorizontalAlignment="Left" Width="79" 
                                Margin="21,223,0,0"><Run Text="С"/><Run Language="ru-ru" Text="умма"/><Run Text=":"/></TextBlock>
                            <TextBlock Height="33" VerticalAlignment="Top" 
                                HorizontalAlignment="Left" Width="105" 
                                Margin="219,223,0,0"><Run Language="ru-ru" Text="Кошелёк"/><Run Text=":"/></TextBlock>
                            <TextBlock Height="33" VerticalAlignment="Top" 
                                HorizontalAlignment="Left" Width="121" 
                                Margin="470,223,0,0"><Run Language="ru-ru" Text="Категория:"/></TextBlock>
                            <ComboBox Margin="470,256,19,0" VerticalAlignment="Top" Height="45"/>



                        </Grid>
                        <TextBlock HorizontalAlignment="Left" Margin="10,373,0,0" 
                                   TextWrapping="Wrap" VerticalAlignment="Top" Text="Учёт:"/>
                        <ListBox Margin="10,410,10,10"/>



                    </Grid>
                </TabItem.Content>
            </TabItem>
            <TabItem Width="150"
                     FontSize="24" Margin="0,-3,0,-2">
                <TabItem.Header>
                    <TextBlock>Расходы</TextBlock>
                </TabItem.Header>
                <TabItem.Content>
                    <Grid Background="#FFE5E5E5"/>
                </TabItem.Content>
            </TabItem>
            <TabItem Width="150"
                     FontSize="24" Margin="0,-4,0,-1">
                <TabItem.Header>
                    <TextBlock>График</TextBlock>
                </TabItem.Header>
                <TabItem.Content>
                    <Grid Background="#FFE5E5E5"/>
                </TabItem.Content>
            </TabItem>
        </TabControl>
        <Button
                Margin="363,6,10,0"
                VerticalAlignment="Top"
                Height="22"
                Background="Black" Grid.Column="1"/>

    </Grid>
</Window>
